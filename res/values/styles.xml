<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dip</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">2dip</item>
        <item name="android:layout_marginRight">2dip</item>
        <item name="android:background">@drawable/button_states</item>
    </style>
    <style name="ingredient">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dip</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="booze_button">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22dip</item>
        <item name="android:background">@color/red</item>
    </style>
    <style name="recipe_button">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dip</item>
        <item name="android:background">@color/green</item>
    </style>
    <style name="recipe_text">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dip</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>