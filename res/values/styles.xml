<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="inPageLayout">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">6dip</item>
        <item name="android:layout_marginRight">6dip</item>
    </style>
    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dip</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:background">@drawable/button_states</item>
    </style>
    <style name="ingredient_button" parent="button">
        <item name="android:background">@color/red</item>
    </style>
    <style name="ingredient">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dip</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/red</item>
    </style>
    <style name="drink">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dip</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/yellow</item>
    </style>
    <style name="no_drink">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dip</item>
        <item name="android:padding">9dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/red</item>
    </style>
    <style name="booze_button">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">12dip</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">22dip</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="recipe_button">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dip</item>
        <item name="android:background">@color/green</item>
    </style>
    <style name="recipe_name">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dip</item>
    </style>
    <style name="recipe_text">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dip</item>
    </style>
</resources>